@model TechMart.Models.Proveedores

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Proveedor</title>
    <link href="~/css/styleproveedor.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="nav-container">
        <a asp-controller="Home" asp-action="AdminLobby">Inicio</a>
        <a asp-controller="Products" asp-action="Inventario">Productos</a>
        <a asp-controller="Proveedores" asp-action="Proveedores">Proveedores</a>
        <a asp-controller="Home" asp-action="Index">Log out</a>
    </nav>
    <div class="container">
        <h1>Editar Proveedor</h1>
        <div class="form-container">
            <h2>Editar Proveedor</h2>
            @using (Html.BeginForm("ActualizarProveedor", "Proveedores", FormMethod.Post))
            {
                <form>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombre" name="nombre" asp-for="nombre" required>
                    </div>
                    <div class="form-group">
                        <label for="direccion">Dirección:</label>
                        <input type="text" id="direccion" name="direccion" asp-for="direccion" required>
                    </div>
                    <div class="form-group">
                        <label for="telefono">Teléfono:</label>
                        <input type="text" id="telefono" name="telefono" asp-for="telefono" required>
                    </div>
                    <div class="form-group">
                        <label for="correo">Correo:</label>
                        <input type="text" id="correo" name="correo" asp-for="correo" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btnActualizar">Actualizar Proveedor</button>
                    </div>
                </form>
            }
        </div>
    </div>
</body>
</html>
