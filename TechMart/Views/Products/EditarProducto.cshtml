
@model TechMart.Models.Productos

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Producto</title>
    <link href="~/css/styleadmin-inventory.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="nav-container">
        <a asp-controller="Home" asp-action="AdminLobby">Inicio</a>
        <a asp-controller="Products" asp-action="Inventario">Productos</a>
        <a asp-controller="Proveedores" asp-action="Proveedores">Proveedores</a>
        <a asp-controller="Home" asp-action="Index">Log out</a>
    </nav>
    <div class="container">
        <h1>Editar Producto</h1>
        <div class="form-container">
            <h2>Editar Producto</h2>
            @using (Html.BeginForm("ActualizarProducto", "Products", FormMethod.Post))
            {
                <form>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombre" name="nombre" asp-for="nombre" required>
                    </div>
                    <div class="form-group">
                        <label for="precio">Precio:</label>
                        <input type="text" id="precio" name="precio" asp-for="precio" required>
                    </div>
                    <div class="form-group">
                        <label for="stock">Stock:</label>
                        <input type="text" id="stock" name="stock" asp-for="stock" required>
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Descripción:</label>
                        <input type="text" id="descripcion" name="descripcion" asp-for="descripcion" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btnActualizar">Actualizar Producto</button>
                    </div>
                </form>
            }
        </div>
    </div>
</body>
</html>
